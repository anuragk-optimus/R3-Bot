{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
      {
        "type": "TextBlock",
        "text": "Welcome to Our Bot!",
        "weight": "Bolder",
        "size": "Large",
        "wrap": true
      },
      {
        "type": "TextBlock",
        "text": "We're here to assist you with your queries and provide the best experience.",
        "wrap": true
      },
      
      {
        "type": "TextBlock",
        "text": "What would you like to do next?",
        "weight": "Bolder",
        "wrap": true
      },
      {
        "type": "ActionSet",
        "actions": [
          {
            "type": "Action.Submit",
            "title": "Get Started",
            "data": {
              "action": "get_started"
            }
          },
          {
            "type": "Action.Submit",
            "title": "View Help",
            "data": {
              "action": "view_help"
            }
          },
          {
            "type": "Action.Submit",
            "title": "Provide Feedback",
            "data": {
              "action": "provide_feedback"
            }
          }
        ]
      }
    ]
  }
  